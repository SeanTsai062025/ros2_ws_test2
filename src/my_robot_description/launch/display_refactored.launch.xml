<launch>

  <let name="urdf_path"
       value="$(find-pkg-share my_robot_description)/urdf_refactored/my_robot.urdf.xacro"/>
  <let name="rviz_config_path"
       value="$(find-pkg-share my_robot_description)/rviz/urdf_config.rviz"/>

  <node pkg="robot_state_publisher" exec="robot_state_publisher">
    <param name="robot_description" type="str" value="$(command 'xacro $(var urdf_path) asset_path:=/home/sean/dexter_test_2/ros2_ws/install/dexter_simplify/share/dexter_simplify/assets')" />
  </node>

  <node pkg="joint_state_publisher_gui"
        exec="joint_state_publisher_gui" />

  <node pkg="rviz2" exec="rviz2" output="screen"
        args="-d $(var rviz_config_path)" />


</launch>
